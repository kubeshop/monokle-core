{
  "name": "monaco-kubernetes",
  "version": "0.1.1",
  "description": "Monokle's Kubernetes plugin for the Monaco Editor.",
  "scripts": {
    "build": "node build.js"
  },
  "type": "module",
  "typings": "./index.d.ts",
  "files": [
    "dist/**"
  ],
  "author": "Kubeshop",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "module": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./worker": {
      "module": "./dist/kubernetes.worker.js",
      "default": "./dist/kubernetes.worker.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kubeshop/monokle-core"
  },
  "keywords": [
    "editor",
    "monaco",
    "monaco-editor",
    "kubernetes"
  ],
  "dependencies": {
    "@monokle/validation": "0.10.3",
    "@types/json-schema": "^7.0.0",
    "jsonc-parser": "^3.0.0",
    "monaco-marker-data-provider": "^1.0.0",
    "monaco-worker-manager": "^2.0.0",
    "nanoid": "4.0.0",
    "path-browserify": "^1.0.0",
    "prettier": "^2.0.0",
    "vscode-languageserver-textdocument": "^1.0.0",
    "vscode-languageserver-types": "^3.0.0",
    "vscode-uri": "^3.0.0",
    "yaml": "^2.0.0"
  },
  "peerDependencies": {
    "monaco-editor": ">=0.30"
  },
  "devDependencies": {
    "@types/uuid": "9.0.0",
    "esbuild": "^0.15.0",
    "monaco-editor": "^0.33.0",
    "typescript": "^4.0.0",
    "yaml-language-server": "^1.0.0"
  }
}
