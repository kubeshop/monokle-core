{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2020"],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "skipLibCheck": true,
    "removeComments": true,
    "strict": true,
    "declaration": true
  },
  "include": ["src/config.ts"],
  "exclude": ["node_modules", "dist"]
}
